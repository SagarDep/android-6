<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View" />
        <variable
            name="commentData"
            type="com.bitlove.fetlife.viewmodel.generic.CommentViewDataHolder" />
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar_image"
            android:visibility="@{commentData.avatarUrl != null ? View.VISIBLE : View.GONE}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:srcGlide="@{commentData.avatarUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/avatar_name"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="@{commentData.avatarName}"
            android:textIsSelectable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/silver"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar_image"/>

        <TextView
            android:id="@+id/comment_body"
            app:formattedText="@{commentData.text}"
            app:textEntities='@{""}'
            app:mediaEntityHolder="@{@id/comment_body}"
            app:removeLineBreaks="@{true}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:autoLink="web"
            android:textColor="@color/midGray"
            android:layout_marginLeft="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/avatar_name"
            app:layout_constraintStart_toEndOf="@+id/avatar_image"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>